{
  "manifest_version": 3,
  "name": "Netflix-like Video Player",
  "version": "1.0",
  "description": "A Netflix-like video player experience, to make every content bingeworthy.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "Streamline Player"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
